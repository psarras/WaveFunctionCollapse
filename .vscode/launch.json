            // "args": ["SimpleTiled", "-s", "./samples/Rooms.png", "-c", "./samples/Rooms/data.xml", "-w", "30", "-h", "30"],
            "args": ["SimpleTiled", "-s", "./samples/Rooms.png"],
            // "args": ["Examples"],
            // "args": ["Overlapping", "-s", ".\\samples\\Flowers.png", "-N", "3", "--PeriodicOutput", "true", "--PeriodicInput", "false", "-g", "-4", "-y", "2", "-o", ".\\Gen"],
            // "args": ["Overlapping", "-s", ".\\samples\\Flowers.png"],
            "cwd": "${workspaceFolder}",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
